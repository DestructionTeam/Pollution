    @{
        ViewBag.Title = "Your Impact";
    }
    <h2>@ViewBag.Title.</h2>
    <div class="container">
        <h4>Choose your car model, type of fuel and see what is your impact!</h4><br /><br />
        <div class="demo">
            <div class="col-md-3">
                   @Html.BeginForm()
                        <label for="speed">Select type of fuel</label>
                        <select name="speed" id="speed">
                            <option selected="selected">Petrol</option>
                            <option>Diesel</option>
                            <option>Natural Gas</option>
                        </select>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input type="text"placeholder="Enter consumption l/100">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input type="text" placeholder="Enter KM in,a Day!">
                </div>

            </div>
            </fieldset>
            <div class="col-md-3">
                <button type="button" class="btn btn-success">Submit</button>
            </div>

            </form>

        </div>
    </div>
<div class="container" style="display:block;width:80%;height:330px;overflow:hidden;">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="/ITEC/slika2.jpg" alt="Chania" width="460" height="345">
            </div>

            <div class="item">
                <img src="/ITEC/slika6.jpg" alt="Chania" width="460" height="345">
            </div>

            <div class="item">
                <img src="/ITEC/slika8.jpg" alt="Flower" width="460" height="345">
            </div>

            <div class="item">
                <img src="/ITEC/10.jpg" alt="Flower" width="460" height="345">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<style>
    body{
         background: #AEAA88; /* For browsers that do not support gradients */
        background: linear-gradient(#AEAA88,#FFFFCC,#FFFF66); /* Standard syntax */
         
