<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Contribution</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">      
            <div class="navbar-header">
                <a href="#" class="navbar-left"><img src="/ITEC/logo1.png" class="img-responsive" style="height:auto; 
width:auto; max-height:84px; max-width:84px;padding-right:10px"/></a>      
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                @Html.ActionLink("MACEDONIAN AIR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "font-family:'Comic Sans MS'"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Impact", "Contribution", "Home")</li>
                    <li>@Html.ActionLink("Risks", "Risks", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div>
                <p style="color: black">&copy; @DateTime.Now.Year - Destruction Team</p>
            </div>
            <div>
                <a style="color: black" href="https://ec.europa.eu/clima/policies/transport/vehicles/cars_en" target="_blank">CO2 Standard source</a>
            </div>
            <div>
                <a style="color: black" href="https://www.unitjuggler.com/convert-fuelconsumption-from-lper100km-to-gperkmgas.html" target="_blank">Impact formula </a>
            </div>
            <div>
                <a style="color: black" href="http://aqicn.org" target="_blank">API source</a>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
